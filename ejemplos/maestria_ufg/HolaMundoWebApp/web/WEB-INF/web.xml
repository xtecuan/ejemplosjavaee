<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>HolaMundoServlet</servlet-name>
        <servlet-class>sv.edu.ufg.holamundoapp.servlet.HolaMundoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcesarAlumnoServlet</servlet-name>
        <servlet-class>sv.edu.ufg.holamundoapp.servlet.ProcesarAlumnoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HolaMundoServlet</servlet-name>
        <url-pattern>/hola</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcesarAlumnoServlet</servlet-name>
        <url-pattern>/procesar.ufg</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
