<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
    <managed-bean>
        <description>Managed Bean para Login</description>
        <managed-bean-name>loginBean</managed-bean-name>
        <managed-bean-class>org.xtecuan.apps.vistacontrolador.LoginBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>exito_usuario</from-outcome>
            <to-view-id>/usuario/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>exito_admin</from-outcome>
            <to-view-id>/admin/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
